<% layout("layouts/boilerplate") %>
    <main class="user-main">
        <div class="card">
            <h1>
                <%= user.username %>
            </h1>
            <p>
                <%= user.email %>
            </p>
            <% if (user.profilePic) { %>
             <img class="thumbnail thumbnail-LG" src="<%= user.profilePic.thumbnailLg %>" alt="profile picture">
            <% } else {%>
                <div class="thumbnail thumbnail-LG blank"></div>
                <% } %>
            <% if (user.equals(currentUser._id)) { %>
                <h2>Set profile picture</h2>
                <div class="set-profile-area">
                        <form class="choose-file-form" action="#">
                            <button class="set-profile"><i class="fas fa-hand-point-up"></i> Choose file</button>
                            <div class="filename-container">
                                <div class="filename">No file selected</div>
                            </div>
                        </form>
                    <form action="/users/<%=user._id%>/profile-pic?_method=PUT" method="POST" enctype="multipart/form-data">
                        <input type="file" name="profile-pic" id="profile-pic">
                        <button class="upload hidden"><i class="fas fa-arrow-circle-up"></i> Upload</button>
                    </form>
                </div> 
                <h2>Account</h2>
                <p><a href="/logout">Log out</a></p>
                <p><a href="/users/<%=user._id%>/change-password">Change password</a></p>
                <p><a href="/users/<%=user._id%>/delete-account">Delete account</a></p>
            <% } %>
        </div>
    </main>